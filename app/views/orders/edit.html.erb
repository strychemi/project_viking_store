<div class="row" style="border: 2px solid grey;">
  <div class="col col-xs-12">
    <h1 class="page-header text-center">Edit Order #<%= "#{@order.id}"%></h1>

    <%= render partial: "form" %>

    <br>
  </div>
</div>

<div class="row" style="border: 2px solid grey;">
  <div class="col col-xs-12">
    <h1 class="page-header text-center">Edit Order Contents</h1>
    <%= form_tag(order_path(@order.id), method: :put) do %>
    <table class="table table-bordered table-striped">
      <tr>
        <th>ID</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total Price</th>
        <th>REMOVE</th>
      </tr>
      <%= form_for @order do |f| %>
        <%= f.fields_for :order_contents do |oc_fields| %>
          <tr>
            <td><%= oc_fields.object.product_id %></td>
            <td><%= oc_fields.text_field :quantity, value: oc_fields.object.quantity %></td>
            <td><%= number_to_currency(oc_fields.object.product.price) %></td>
            <td><%= number_to_currency(oc_fields.object.value) %></td>
            <td><%= link_to "remove", order_content_path(oc_fields.object.id, order_id: "#{@order.id}"), method: "delete", data: {confirm: "Are you sure?"} %></td>
          </tr>

      <% end %>
    </table>
    <tr><%= submit_tag("Update Order Contents", class: "btn btn-block btn-primary") %></tr>
    <% end %>
    <div class="text-center" style="margin: 15px;">
      <%= link_to "Delete Order", order_path(@order), method: "delete", data: {confirm: "Are you sure?"} %>
    </div>
    <% end %>
    <br>
  </div>
</div>


  <div class="row" style="border: 2px solid grey;">
    <div class="col col-xs-12">
      <h1 class="page-header text-center">Add Products to Order</h1>
      <%= form_for @order do |f| %>
      <table class="table table-bordered table-striped">
        <tr>
          <th>Product ID</th>
          <th>Quantity</th>
        </tr>
        <% 5.times do %>
          <%= f.fields_for :order_contents, OrderContent.new do |oc| %>
            <tr>
              <td><%= oc.text_field :product_id %></td>
              <td><%= oc.text_field :quantity, value: nil%></td>
            </tr>
          <% end %>
        <% end %>
        </table>
        <%= f.submit class: "btn btn-block btn-primary" %>
      <% end %>
    </div>
  </div>
