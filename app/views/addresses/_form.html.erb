<ul>
  <% @address.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>

<%= form_for @address do |f| %>
  <table class="table table-striped table-bordered">
    <tr>
      <td>Owner ID</td>
      <td><%= @address.user_id %></td>
    </tr>
    <tr>
      <td>Owner Name</td>
      <td><%= link_to "#{@address.user.first_name} #{@address.user.last_name}", user_path(@address.user.id) %></td>
    </tr>
    <tr>
      <td>Street Address</td>
      <td><%= f.text_field :street_address, class: "form-control" %></td>
    </tr>
    <tr>
      <td>City</td>
      <td><%= f.text_field :city, value: @address.city.name, class: "form-control" %></td>
    </tr>
    <tr>
      <td>State</td>
      <td>
        <%= f.collection_select :state, State.all, :id, :name, {}, {class: "form-control", value: "#{@address.state.name}"}%>
      </td>
    </tr>

  </table>
<% end %>
